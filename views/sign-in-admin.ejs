<%- include('partials/header') %>


<!-- Masthead-->
<br><br><br><br><br><br><br><br>
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-5 align-self-end">
                <h1 class="text-uppercase text-black font-weight-bold">Sign In Admin</h1>
                <hr class="divider my-4" />
            </div>
            <div class="col-lg-4 align-self-baseline">

                <% if (msg.msg>0 && msg.msg === 2) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        Email / Password salah
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                <% } %>
                
            <form action="/signin-admin" method="POST">
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" id="email" value="admin@admin.com" name="email" required>
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" id="password" value="admin" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary">Sign In</button>
            </form>
        </div>
    </div>
</header>

<%- include('partials/footer') %>