<%- include('partials/header') %>


<!-- Masthead-->
<br><br><br><br><br><br><br><br>
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-5 align-self-end">
                <h1 class="text-uppercase text-black font-weight-bold">Silahkan Sign In</h1>
                <hr class="divider my-4" />
                <a href="/signup"><p class="text-white-75 font-weight-light mb-5">Belum daftar? Klik di sini</p></a>
            </div>
            <div class="col-lg-4 align-self-baseline">
                <% if (msg.msg>0 && msg.msg === 1) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        Sign up sukses. Silahkan sign in.
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                <% } %>

                <% if (msg.msg>0 && msg.msg === 2) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        Email / Password salah
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                <% } %>
                
            <form action="/signin" method="POST">
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" id="email" placeholder="Enter email" name="email" required>
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary">Sign In</button>
            </form>
        </div>
    </div>
</header>

<%- include('partials/footer') %>